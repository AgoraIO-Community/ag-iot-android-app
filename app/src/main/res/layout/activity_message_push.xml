<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.agora.iotlink.widget.CommonTitleView
        android:id="@+id/title_view"
        style="@style/title_view"
        app:ctv_centerText="@string/message_push"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/tvAlarmMessage"
        style="@style/tv_mine_style"
        android:layout_height="59dp"
        android:background="@null"
        android:button="@null"
        android:drawableEnd="@drawable/cb_def_selector"
        android:text="@string/message_alarm"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/title_view"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/grey_ee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAlarmMessage" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/tvNotificationMessage"
        style="@style/tv_mine_style"
        android:layout_height="59dp"
        android:layout_marginTop="1dp"
        android:background="@null"
        android:button="@null"
        android:drawableEnd="@drawable/cb_def_selector"
        android:text="@string/message_notification"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvAlarmMessage"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>