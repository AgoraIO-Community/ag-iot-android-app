<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="316dp"
    android:background="@drawable/bg_full_white_top_r30">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="@string/type"
        android:textColor="@color/def_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="47dp"
        android:clickable="true"
        android:drawableEnd="@mipmap/albumselected"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/all_type"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="34dp"
        android:background="@color/grey_d3"
        app:layout_constraintTop_toBottomOf="@id/btnAll" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnSoundDetection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="47dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/sound_detection"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAll" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="34dp"
        android:background="@color/grey_d3"
        app:layout_constraintTop_toBottomOf="@id/btnAll" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnMotionDetection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="47dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/motion_detection"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSoundDetection" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="34dp"
        android:background="@color/grey_d3"
        app:layout_constraintTop_toBottomOf="@id/btnAll" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnHumanInfraredDetection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="47dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/human_infrared_detection"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMotionDetection" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="34dp"
        android:background="@color/grey_d3"
        app:layout_constraintTop_toBottomOf="@id/btnAll" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnCallButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="47dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/call_button"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnHumanInfraredDetection" />
</androidx.constraintlayout.widget.ConstraintLayout>