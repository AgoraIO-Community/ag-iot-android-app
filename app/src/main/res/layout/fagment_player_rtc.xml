<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_rtc_channel_name"
        style="@style/def_et_input"
        android:layout_marginTop="60dp"
        android:enabled="true"
        android:hint="输入要播放的频道名"
        android:inputType="text"
        android:paddingEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_rtc_uid"
        style="@style/def_et_input"
        android:layout_marginTop="30dp"
        android:enabled="true"
        android:hint="输入uid"
        android:inputType="text"
        android:paddingEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_rtc_channel_name" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rtc_play"
        style="@style/rtm_btn_full"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:text="开始"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_rtc_uid" />

    <SurfaceView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_rtc_play" />

</androidx.constraintlayout.widget.ConstraintLayout>