<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="478dp"
    android:background="@drawable/bg_full_radius_white_10">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="用户协议和隐私政策"
        android:textColor="@color/def_text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="28dp"
        android:text="@string/privacy_protection_tip"
        android:textColor="@color/black_50_percent"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrivacyPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="@string/privacy_policy"
        android:textColor="@color/blue_49"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/tvAnd"
        app:layout_constraintTop_toTopOf="@id/tvAnd" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/and"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvContent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUserAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="@string/user_agreement"
        android:textColor="@color/blue_49"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tvAnd"
        app:layout_constraintTop_toTopOf="@id/tvAnd" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDisagree"
        style="@style/def_btn_empty"
        android:text="@string/disagree"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvPrivacyPolicy"
        app:layout_constraintTop_toBottomOf="@+id/tvPrivacyPolicy" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAgree"
        style="@style/def_btn_full"
        android:text="@string/agree"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAnd"
        app:layout_constraintTop_toBottomOf="@+id/tvUserAgreement" />
</androidx.constraintlayout.widget.ConstraintLayout>