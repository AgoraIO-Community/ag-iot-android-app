<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="222dp"
    android:background="@drawable/bg_full_white_top_r30">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="@string/change_voice"
        android:textColor="@color/def_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cbVoice1"
        style="@style/cb_change_voice_style"
        android:drawableTop="@mipmap/voice1"
        android:text="@string/original_sound"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/cbVoice2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cbVoice2"
        style="@style/cb_change_voice_style"
        android:drawableTop="@mipmap/voice2"
        android:text="@string/uncle"
        app:layout_constraintEnd_toStartOf="@id/cbVoice3"
        app:layout_constraintStart_toEndOf="@id/cbVoice1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cbVoice3"
        style="@style/cb_change_voice_style"
        android:drawableTop="@mipmap/voice3"
        android:text="@string/lolita"
        app:layout_constraintEnd_toStartOf="@id/cbVoice4"
        app:layout_constraintStart_toEndOf="@id/cbVoice2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cbVoice4"
        style="@style/cb_change_voice_style"
        android:drawableTop="@mipmap/voice4"
        android:text="@string/young"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cbVoice3"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>