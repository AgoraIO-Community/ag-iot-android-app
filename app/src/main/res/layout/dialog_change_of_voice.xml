<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:background="@drawable/bg_full_white_top_r30">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="@string/change_voice"
        android:textColor="@color/def_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnVoiceOrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="47dp"
        android:clickable="true"
        android:drawableEnd="@mipmap/albumselected"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/voice_orignal"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="34dp"
        android:background="@color/grey_d3"
        app:layout_constraintTop_toBottomOf="@id/btnVoiceOrg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnVoiceOldman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="47dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/voice_oldman"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVoiceOrg" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="34dp"
        android:background="@color/grey_d3"
        app:layout_constraintTop_toBottomOf="@id/btnVoiceOldman" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnVoiceBoy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="47dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/voice_boy"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVoiceOldman" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="34dp"
        android:background="@color/grey_d3"
        app:layout_constraintTop_toBottomOf="@id/btnVoiceBoy" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnVoiceGirl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="47dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/voice_girl"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVoiceBoy" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="34dp"
        android:background="@color/grey_d3"
        app:layout_constraintTop_toBottomOf="@id/btnVoiceGirl" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnVoiceZhubajie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="47dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/voice_zhubajie"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVoiceGirl" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="34dp"
        android:background="@color/grey_d3"
        app:layout_constraintTop_toBottomOf="@id/btnVoiceZhubajie" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnVoiceEthereal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="47dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/voice_ethereal"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVoiceZhubajie" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="34dp"
        android:background="@color/grey_d3"
        app:layout_constraintTop_toBottomOf="@id/btnVoiceEthereal" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnVoiceHulu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="47dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/voice_hulu"
        android:textColor="@color/def_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVoiceEthereal" />



</androidx.constraintlayout.widget.ConstraintLayout>