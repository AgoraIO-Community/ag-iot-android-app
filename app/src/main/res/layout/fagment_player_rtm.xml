<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_rtm_message"
        style="@style/def_et_input"
        android:layout_marginTop="60dp"
        android:enabled="false"
        android:hint="输入要发送的消息"
        android:inputType="text"
        android:paddingEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rtm_send"
        style="@style/rtm_btn_full"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:text="@string/send"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_rtm_message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rtm_timersend"
        style="@style/rtm_btn_full"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:text="开始发送"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_rtm_send"/>

    <TextView
        android:id="@+id/tv_tip_recvedmsg"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="Microsoft YaHei UI"
        android:gravity="left"
        android:text="接收到的消息"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_rtm_timersend"/>

    <TextView
        android:id="@+id/tv_rtm_recvedmsg"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:fontFamily="Microsoft YaHei UI"
        android:gravity="left"
        android:text=""
        android:textColor="@color/white"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip_recvedmsg"/>

</androidx.constraintlayout.widget.ConstraintLayout>