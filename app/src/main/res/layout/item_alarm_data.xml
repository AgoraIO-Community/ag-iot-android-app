<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:layout_marginTop="9dp"
    android:layout_marginEnd="15dp"
    android:elevation="3dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMediaCover"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMediaTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="12:22"
        android:textColor="@color/black_50_percent"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/ivMediaCover"
        app:layout_constraintStart_toStartOf="@id/ivMediaCover"
        app:layout_constraintTop_toBottomOf="@id/ivMediaCover" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tvMediaDuration"
        android:layout_width="0dp"
        android:layout_height="11dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="2dp"
        android:background="@null"
        android:clickable="false"

        android:drawableStart="@drawable/ic_rec"
        android:gravity="end|center_vertical"
        android:text="00:10"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivMediaCover"
        app:layout_constraintEnd_toEndOf="@id/ivMediaCover"
        app:layout_constraintStart_toStartOf="@id/ivMediaCover" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cbSelect"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:clickable="false"
        android:enabled="false"
        android:button="@drawable/bg_cb_check_status_s"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>